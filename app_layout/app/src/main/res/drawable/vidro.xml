<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <?xml version="1.0" encoding="utf-8"?>
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#80000000" /> <!-- Cor de fundo transparente -->
            </shape>
        </item>
        <item android:top="2dp"> <!-- Espaço superior para simular o efeito de desfoque -->
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" /> <!-- Cor de preenchimento do conteúdo -->
                <corners android:radius="8dp" /> <!-- Cantos arredondados para o conteúdo -->
            </shape>
        </item>
    </layer-list>

</item>
</selector>